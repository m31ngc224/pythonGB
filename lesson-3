def div(*divs):
    try:
        div1 = int(input('Введите делимое: '))
        div2 = int(input('Введите делитель: '))
        res = div1 / div2
    except ValueError:
        return 'Value error'
    except ZeroDivisionError:
        return 'На ноль делить нельзя'

    return res


print(f'Итогом:  {div()}')

